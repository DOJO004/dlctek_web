<div class="w-full max-w-lg p-2 mx-auto my-10 lg:flex">
  <div class="lg:mr-4">
    <h2 class="text-xl font-bold ">Sign up</h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="field">
        <%= f.label :full_name, "name" %><br />
        <%= f.text_field :full_name, class:" rounded-md w-full p-1" %>
      </div>
      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:" rounded-md w-full p-1" %>
      </div>
      <div class="field">
        <%= f.label :password %>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", class:" rounded-md w-full p-1" %>
      </div>
      <div class="field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class:" rounded-md w-full p-1" %>
      </div>
      <div class="actions">
        <%= f.submit "Sign up" %>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
  <div class="hidden p-4 bg-black rounded-md lg:block ">
    <p class="mt-24 text-4xl font-bold text-center text-white ">DLCTEK</p>
  </div>
</div>