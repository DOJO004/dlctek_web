<div class="w-full h-screen max-w-4xl p-2 mx-auto md:flex">
  <div class="items-center justify-center hidden w-full h-full md:flex">
    <%= image_tag "dlctek_banner.png", class:" max-w-md dark:invert "%>
  </div>
  <div class="w-full mx-auto translate-y-[15%] p-4 ">
    <h2 class="mb-4 text-4xl font-bold dark:text-slate-100 ">Sign up</h2>
    <div class="mb-4">
      <% resource_class.omniauth_providers.each do |provider| %>
        <%= button_to omniauth_authorize_path(resource_name, provider), data: { turbo: false }, class: "w-full" do %>
          <%= image_tag "sign_in_with_google.png", class: "mx-auto" %>
        <% end %>
      <% end %>
    </div>
    <div class="relative my-4">
      <hr>
      <p class="absolute px-2 -translate-x-1/2 -translate-y-1/2 bg-white left-1/2 dark:bg-slate-900 dark:text-slate-100">or</p>
    </div>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div>
        <%= f.label :full_name, "Name", class:"dark:text-slate-100" %>
        <%= f.text_field :full_name, class:" rounded-md w-full p-1" %>
      </div>
      <div>
        <%= f.label :email, "Email", class:"dark:text-slate-100" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:" rounded-md w-full p-1" %>
      </div>
      <div>
        <%= f.label :password, "Password", class:"dark:text-slate-100" %>
        <% if @minimum_password_length %>
          <em class="dark:text-slate-100">(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", class:" rounded-md w-full p-1" %>
      </div>
      <div>
        <%= f.label :password_confirmation, "Confirm password", class:"dark:text-slate-100" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class:" rounded-md w-full p-1" %>
      </div>
      <%= f.submit "Sign up", class:"w-full p-1 my-4 text-white bg-black rounded-md dark:bg-white dark:text-black" %>
    <% end %>
    <hr class="my-4">
    <p class="text-center dark:text-slate-100 ">Have accout?   <%= link_to "Log in", new_session_path(resource_name), class:"text-blue-500" %> </p>
  </div>
</div>