<div class="fixed top-0 z-10 justify-center w-full -translate-x-1/2 left-1/2 md:text-2xl" data-controller="burger-menu">
  <div class="bg-white/30 backdrop-blur-sm">
    <div class="flex items-center justify-between max-w-4xl mx-auto ">
      <div class="m-2 ">
        <%= link_to root_path do%>
          <%= image_tag("dlctek_logo.png",width:"100", class:"block")%>
        <% end %>
      </div>
      <div class="flex items-center gap-2">
        <%# darkmode toggle %>
        <span data-action="click->dark-mode#darkModeToggle" class="cursor-pointer material-symbols-outlined">
          contrast
        </span>
        <%# burget menu %>
        <div data-action="click->burger-menu#showMenu" class="m-2 cursor-pointer ">
          <div class="w-8 h-1 my-2 transition-all duration-500 ease-in-out bg-red-500 rounded-md" data-burger-menu-target="line1"></div>
          <div class="w-8 h-1 my-2 transition-all duration-500 ease-in-out bg-blue-500 rounded-md" data-burger-menu-target="line2"></div>
        </div>
      </div>
    </div>
  </div>
  <div id="menu" data-burger-menu-target="menu" class="fixed left-0 z-10 w-full h-0 overflow-hidden text-center transition-all duration-500 ease-in-out bg-black top-10 ">
    <div class="max-w-4xl mx-auto ">
      <%= link_to "About us", about_us_path, class:"block hover:bg-gray-300 text-white my-2"%>
      <%= link_to "Articles", articles_path, class:"block hover:bg-gray-300 text-white my-2"%>
      <%= link_to "Store", products_path, class:"block hover:bg-gray-300 text-white my-2"%>
      <% if current_user %>
        <%= link_to "Edit Account", edit_user_registration_path, class:"block hover:bg-gray-300 text-white my-2" %>
        <%= link_to "Logout", destroy_user_session_path, data:{ turbo_method: :delete }, class:"block hover:bg-gray-300 text-white my-2" %>
      <% else %>
        <%= link_to "Login", new_user_session_path, class:"block hover:bg-gray-300 text-white my-2"%>
        <%= link_to "Create Account", new_user_registration_path, class:"block hover:bg-gray-300 bg-gray-500 text-white w-fit mx-auto p-1 rounded-md text-white my-2" %>
      <% end %>
      <% if current_user && current_user.role === "admin"%>
        <%= link_to "Dashboard", dashboard_path, class:"block hover:bg-gray-300 text-white my-2"%>
      <% end %>
    </div>
  </div>
</div>