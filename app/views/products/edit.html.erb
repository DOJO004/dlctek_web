<%= form_with(model: @product, data: { turbo: false, turbo_method: :patch}) do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :descript %>
  <%= f.text_field :descript %>
  <%= f.label :amount %>
  <%= f.number_field :amount %>
  <%= f.label :price %>
  <%= f.number_field :price %>
  <%= f.label :status %>
  <%= f.check_box :status %>
  <%= f.submit%>
<% end %>
<%= link_to "destroy", product_path(params[:id]), data: { turbo_confirm: "delete?", turbo_method: :delete}, class:"destroy_btn"%>