<div class="flex items-center w-full p-1 border">
  <div>
    <%= link_to root_path do%>
      <%= image_tag("dlctek_logo.png", width:50)%>
    <% end %>
  </div>
  <div >
    <ul class="flex items-center">
      <li class="mx-2"><%= link_to "about_us", about_us_path%></li>
      <li class="mx-2"><%= link_to "dashboard", dashboard_path%></li>
      <li class="mx-2"><%= link_to "store", store_path%></li>
      <% if current_user %>
        <li class="mx-2">
          <h2><%= current_user.email %> </h2>
        </li>
        <li class="mx-2"><%= link_to "Edit Account", edit_user_registration_path %></li>
        <li class="mx-2"><%= button_to "Logout", destroy_user_session_path, data:{ turbo: false }, method: :delete %></li>
      <% else %>
        <li class="mx-2"><%= link_to "Login", new_user_session_path %></li>
        <li class="p-1 mx-2 bg-black rounded-md text-gray-50"><%= link_to "Create Account", new_user_registration_path %></li>
      <% end %>
    </ul>
  </div>
</div>