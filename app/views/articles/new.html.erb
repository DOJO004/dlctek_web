<div class="w-full p-2">
  <p class="text-2xl ">New Article</p>
  <%= form_with(model: @article) do |f|%>
    <%= f.label :title%>
    <%= f.text_field :title, class:"w-full rounded-md"%>
    <%= f.label :category%>
    <%= f.text_field :category, class:"w-full rounded-md"%>
    <%= f.label :content%>
    <%= f.text_area :content, class:"w-full rounded-md"%>
    <%= f.submit%>
  <% end %>
</div>