<div class="my-4">
  <div class="flex items-end justify-between gap-2 pb-2 my-2 border-b-2">
    <h2 class="text-2xl dark:text-slate-100">Artilces</h2>
    <%= link_to "Add article", new_article_path, class:"p-1 border rounded-md hover:bg-gray-300 dark:text-slate-100" %>
  </div>
  <%= search_form_for @q, url: dashboard_path, method: :get, class:"mx-auto w-fit flex gap-2 my-2"  do |f| %>
    <%= f.search_field :title_cont, placeholder: "Search title...", class:"rounded-md"%>
    <%= f.submit "search", class:"p-1 bg-gray-100 rounded-md cursor-pointer hover:bg-gray-300"%>
  <% end %>
  <div class="overflow-auto ">
    <div class="grid grid-cols-4 gap-2 p-1 font-bold text-center bg-gray-200 rounded--t-md dark:bg-gray-700 dark:text-slate-200 ">
      <p>Title</p>
      <p>Category</p>
      <p>Author</p>
      <p>Created_at</p>
    </div>
    <% @articles.each do |article|%>
      <%= link_to article_path(article), class:"grid grid-cols-4 gap-2 text-center dark:bg-gray-700 dark:text-slate-200 " do %>
        <p><%= article.title%></p>
        <p><%= article.category%></p>
        <p><%= article.user.full_name%> </p>
        <p><%= article.created_at.in_time_zone("Taipei").strftime("%Y-%m-%d")%></p>
      <% end %>
    <% end %>
  </div>
</div>