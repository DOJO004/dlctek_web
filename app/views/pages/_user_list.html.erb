<div class="my-4">
  <div class="pb-2 border-b-2">
    <h2 class="text-2xl">Users</h2>
  </div>
  <div class="overflow-auto ">
    <table class="w-full text-center">
      <thead>
        <tr>
          <th>id</th>
          <th>eamil</th>
          <th>full name</th>
          <th>role</th>
          <th>provider</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user|%>
          <tr>
            <td><%= user.id%></td>
            <td><%= user.email%></td>
            <td><%= user.full_name%></td>
            <td><%= user.role%></td>
            <td><%= user.provider%></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>