<div class="w-full max-w-4xl p-4 mx-auto">
  <h2 class="text-2xl text-center">Dashboard</h2>
  <div class="flex items-center justify-center gap-2 my-2">
    <p class="cursor-pointer ">Products</p>
    <p class="cursor-pointer ">Articles</p>
    <p class="cursor-pointer ">Users</p>
  </div>
  <%= render "products" %>
  <div class="flex items-end justify-between gap-2 pb-2 my-2 border-b-2">
    <h2 class="text-2xl ">Artilces</h2>
    <%= link_to "Add article", new_article_path, class:"p-1 border rounded-md hover:bg-gray-300" %>
  </div>
  <div class="grid grid-cols-3 gap-2 p-1 font-bold text-center bg-gray-200 rounded-md ">
    <p>Title</p>
    <p>category</p>
    <p>created_at</p>
  </div>
  <div >
    <% @articles.map do |article|%>
      <%= link_to article_path(article), class:"grid grid-cols-3 gap-2 text-center hover:bg-gray-100" do %>
        <p><%= article.title%></p>
        <p><%= article.category%></p>
        <p><%= article.created_at.in_time_zone("Taipei").strftime("%Y-%m-%d")%></p>
      <% end %>
    <% end %>
  </div>
  <%= render "user_list" %>
</div>