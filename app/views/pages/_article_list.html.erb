<div class="flex items-end justify-between gap-2 pb-2 my-2 border-b-2">
  <h2 class="text-2xl ">Artilces</h2>
  <%= link_to "Add article", new_article_path, class:"p-1 border rounded-md hover:bg-gray-300" %>
</div>
<%= form_with(url: "/dashboard", method: "get") do |form| %>
  <%= form.text_field :title, id: "search_title", placeholder: "Search title...", class: "w-full rounded-md" %>
  <%= form.button "Search", type: "submit", id: "search_button" %>
<% end %>
<div class="grid grid-cols-4 gap-2 p-1 font-bold text-center bg-gray-200 rounded-md ">
  <p>Title</p>
  <p>Category</p>
  <p>Author</p>
  <p>Created_at</p>
</div>
<div >
  <% @articles.map do |article|%>
    <%= link_to article_path(article), class:"grid grid-cols-4 gap-2 text-center hover:bg-gray-100" do %>
      <p><%= article.title%></p>
      <p><%= article.category%></p>
      <p><%= article.user.full_name%> </p>
      <p><%= article.created_at.in_time_zone("Taipei").strftime("%Y-%m-%d")%></p>
    <% end %>
  <% end %>
</div>